<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" title="Asistencias" xmlns:controls="bootstrap.controls.*">
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<s:Form width="100%">
		<controls:FormItem label="Grupo:">
			<s:Button label="Seleccionar grupo" id="grupoInput" width="50%" styleName="btn-silent"/>
		</controls:FormItem>
		<controls:FormItem label="Fecha:" enabled="false" id="fechas">
			<mx:DateField width="25%" id="inicioInput" formatString="DD/MM/YYYY"/>
			<mx:DateField width="25%" id="finInput" formatString="DD/MM/YYYY"/>
		</controls:FormItem>
		<controls:FormItem>
			<s:Button width="50%" label="Buscar" id="btnBuscar"/>
		</controls:FormItem>
	</s:Form>
	<s:DataGrid width="100%" height="100%" id="gridAsistencias">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="Cliente" dataField="cliente"/>
				<s:GridColumn headerText="Fecha" dataField="fechaIngresoLocal"/>
				<s:GridColumn headerText="Hora" dataField="horaIngreso"/>
				<s:GridColumn headerText="Usuario" dataField="usuario"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	<s:controlBarContent>
		<s:Button label="Imprimir" height="30" styleName="icon-imprimir-sm" id="btnImprimir"/>
		<s:Spacer width="100%"/>
		<s:Button label="Atras" height="30" styleName="btn-danger icon-atras-sm" id="btnCancelar"/>
	</s:controlBarContent>
</s:Panel>
